                    </HorizontalStackLayout>
                    <Label x:Name="ThursdayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="ThursdayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="ThursdayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- PIĄTEK -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="PIĄTEK" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnFridayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="FridayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="FridayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="FridayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- SOBOTA -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="SOBOTA" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnSaturdayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="SaturdayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="SaturdayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="SaturdayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- NIEDZIELA -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="NIEDZIELA" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnSundayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="SundayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="SundayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="SundayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
