<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.NewPage1"
             Title="Planer Posiłków">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="APK.exe 🖊️"
                   FontSize="28"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Historia" WidthRequest="140" Clicked="OnHistoryButtonClicked" />
                <Button Text="Lista Zakupów" WidthRequest="140" Clicked="OnShoppingListButtonClicked" />
            </HorizontalStackLayout>

            <!-- Dni tygodnia -->
            <!-- Pętla powtarzająca układ: Label + 3 posiłki + przycisk -->

            <!-- Dni: PONIEDZIAŁEK - NIEDZIELA -->
            <!-- Każdy dzień to osobny Frame -->

            <!-- Przykład: PONIEDZIAŁEK -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="PONIEDZIAŁEK" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnMondayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="MondayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="MondayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="MondayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- WTOREK -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="WTOREK" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnTuesdayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="TuesdayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="TuesdayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="TuesdayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- ŚRODA -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="ŚRODA" FontSize="18" FontAttributes="Bold" />
                        <Button Text="Dodaj" Clicked="OnWednesdayAddClicked"/>
                    </HorizontalStackLayout>
                    <Label x:Name="WednesdayBreakfastLabel" Text="Śniadanie: -" TextColor="Gray" />
                    <Label x:Name="WednesdayLunchLabel" Text="Obiad: -" TextColor="Gray" />
                    <Label x:Name="WednesdayDinnerLabel" Text="Kolacja: -" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- CZWARTEK -->
            <Frame BorderColor="Gray" CornerRadius="10">
                <VerticalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="CZWARTEK" FontSize="18" FontAttributes="Bold" />
