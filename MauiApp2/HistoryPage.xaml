<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.HistoryPage"
             Title="Historia Posiłków">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Historia Posiłków" FontSize="24" HorizontalOptions="Center" />

        <ListView x:Name="MealsListView" ItemSelected="OnMealSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding MealType}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
